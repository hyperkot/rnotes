{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        // No module system, concatenated file
        "module": "CommonJS",
        // Set React as the JSX factory
        "jsx": "react", // для 17ого реакта надо react-jsx, но шide рушается - надо разобраться
        // Resolve modules using Node-resolution algorithm
        "moduleResolution": "node",
        // Target ES6 for more modern browsers
        "target": "es6",
        // Include typings from built-in lib declarations
        "lib": [
            "es2015", // es6
            "es2016", // es7
            "es2017",
            "es2018",
            "es2019",
            "es2020",
            "dom",
            "dom.iterable"
        ],
        // Include module source maps for debugging
        "sourceMap": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": false, // лень было фиксить все варнинги, но вообще стоит включить потом
        "strictPropertyInitialization": false,
        "baseUrl": "./src/",
        "paths": {
            "lib/*": [
                "lib/*"
            ],
            "modules/*": [
                "data/modules/*"
            ],
            "modules": [
                "data/modules"
            ],
            "types/*": [
                "data/types/*"
            ],
            "types": [
                "data/types"
            ],
            "data/*": [
                "data/*"
            ],
            "hocs/*": [
                "hocs/*"
            ],
            "ui/*": [
                "ui/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}